@model CahueñasBryanTaller.Models.Equipo

@{
    ViewData["Title"] = "Crear Equipo";
}

<h2>Crear nuevo equipo</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="PartidosJugados"></label>
        <input asp-for="PartidosJugados" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="PartidosGanados"></label>
        <input asp-for="PartidosGanados" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="PartidosEmpatados"></label>
        <input asp-for="PartidosEmpatados" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="PartidosPerdidos"></label>
        <input asp-for="PartidosPerdidos" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
