@{
    ViewData["Title"] = "Inicio";
}

<!-- Carrusel -->
<div id="ligaProCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <!-- Imagen 1 -->
        <div class="carousel-item active">
            <img src="~/images/liga1.png" class="d-block w-100 h-100" alt="Imagen LigaPro 1">
            <div class="carousel-caption d-none d-md-block text-center text-white">
                <h1 class="display-2 font-weight-bold">Fútbol de Alto Nivel</h1>
                <p class="fs-3">Compite, lucha, y gana.</p>
            </div>
        </div>
        <!-- Imagen 2 -->
        <div class="carousel-item">
            <img src="~/images/liga 2.png" class="d-block w-100 h-100" alt="Imagen LigaPro 2">
            <div class="carousel-caption d-none d-md-block text-center text-white">
                <h1 class="display-2 font-weight-bold">Fútbol de Alto Nivel</h1>
                <p class="fs-3">Compite, lucha, y gana.</p>
            </div>
        </div>
        <!-- Imagen 3 -->
        <div class="carousel-item">
            <img src="~/images/ligan 3.jpg" class="d-block w-100 h-100" alt="Imagen LigaPro 3">
            <div class="carousel-caption d-none d-md-block text-center text-white">
                <h1 class="display-2 font-weight-bold">Fútbol de Alto Nivel</h1>
                <p class="fs-3">Compite, lucha, y gana.</p>
            </div>
        </div>
    </div>
    <!-- Controles del carrusel -->
    <button class="carousel-control-prev" type="button" data-bs-target="#ligaProCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#ligaProCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
</div>
